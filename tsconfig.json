{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "@types/**/*.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "stores/*": [
        "./src/stores/*"
      ]
    },
    "types": [
      "unplugin-vue-define-options/macros-global",
      "element-plus/global"
    ],
    "lib": [
      "ES2022",
      "DOM",
    ],
    "target": "ES2015"
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}